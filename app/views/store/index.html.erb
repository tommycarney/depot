<p id="notice"><%= notice %></p>

<h1>Your Pragmatic Catalog</h1>
<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= link_to image_tag(product.image_url), line_items_path(product_id: product), remote: true %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price, unit: "â‚¬") %></span>
          <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, data: { disable_with: "Please wait..." }
 %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
<% if @visits > 5 %>
  <sub><a href="/"><%= pluralize(@visits, 'visit') %></a></sub>
<% end %>
